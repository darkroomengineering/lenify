{
  "name": "Lenify",
  "description": "Smooth Scroll for everyone, with a single click",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "Applies Lenis to any website"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
