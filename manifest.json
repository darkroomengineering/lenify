{
  "manifest_version": 3,
  "name": "Lenify",
  "version": "1.0",
  "description": "Smooth scrolling with Lenis",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16-gray.png",
      "48": "icon48-gray.png",
      "128": "icon128-gray.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lenis-wrapper.js",
        "icon16.png",
        "icon48.png",
        "icon128.png",
        "icon-gray16.png",
        "icon-gray48.png",
        "icon-gray128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}